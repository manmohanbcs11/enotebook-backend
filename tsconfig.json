{
    "compilerOptions": {
		"resolveJsonModule": true,
        "module": "commonjs",
        "esModuleInterop": true,
		"target": "ES2020",
        "moduleResolution": "node",
        "sourceMap": false,
        "outDir": "dist",
		"skipLibCheck": true,
    },
    "include": [
        "src"
    ],
    "exclude": [
        "node_modules",
        "dist"
    ],
    "lib": [
        "ES2020"
    ]
}